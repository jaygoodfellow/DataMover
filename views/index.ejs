<%- include('includes/header'); -%>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h2>Customers</h2>
</div>
<% if (msg) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <p class="mb-0"><%=msg%></p>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</button>
</div>
<% } %>
<div class="table-responsive">
  <table class="table table-striped table-sm dataTable">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Acquisition Date</th>
        <th>Export Date</th>
      </tr>
    </thead>
    <tbody>
      <% customers.forEach(function(customer){ %>
      <tr>
        <td><%=customer.first_name%></td>
        <td><%=customer.last_name%></td>
        <td><%=customer.acquisition%></td>
        <td><%=customer.export%></td>
      </tr>
        <% }); %>
    </tbody>
  </table>
</div>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3 border-bottom">
  <h3>Generate Sample Customers</h3>
</div>


<form class="form-inline" method="post" action="/generate">
  <label class="sr-only" for="inlineFormInputName2">Number Of Customers</label>
  <input required type="number" class="form-control mb-2 mr-sm-2" name="quantity" placeholder="75" value="75" min="1" max="500">
  <button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>
<%- include('includes/footer'); -%>